# Secret required to call admin endpoints; required unless UNSECURE is 'true'
ADMIN_SECRET=

# Disables security on admin endpoints
UNSECURE=true

# Disables all writes to Google Calendar
DRY_RUN=true

# All events written to Calendar are explicitly flagged as tests
FLAG_CALENDAR_EVENTS_AS_TESTS=true

# Root URL for the Alibeez API (eg https://myenv.my.alibeez.com/api); required
ALIBEEZ_API_ROOT_URL=

# Key to use when issuing requests to Alibeez; required
ALIBEEZ_KEY=

# OAuth parameters for the Google authentication; required
GOOGLE_OAUTH2_CLIENT_ID=
GOOGLE_OAUTH2_CLIENT_SECRET=
GOOGLE_OAUTH2_CLIENT_REDIRECT_URI=

# Domain to which users must belong (eg zenika.com); required
GOOGLE_OAUTH2_CLIENT_HD=

# File path where to store the date of the latest synchronization; required
LATEST_SYNC_DATE_FILE_PATH=

# Directory path where to store user data; optional, defaults to 'data/users'
USER_DIR=

# Server port; optional, defaults to '3000'
PORT=
